<MessungPage>:
    orientation: 'vertical'
    Label:
        text: "Messwerte"
        font_size: '28sp'
        bold: True
        halign: 'center'
        valign: 'middle'
    GridLayout:
        cols: 2
        spacing: '30dp'
        size_hint_y: None
        height: self.minimum_height
        Label:
            text: "pH-Wert:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
        Label:
            text: f"{root.ph_value}"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
        Label:
            text: "Pool:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.pool_temp:.1f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Poolhaus IN:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.poolhaus_in_temp:.1f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Poolhaus OUT:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.poolhaus_out_temp:.1f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Wärmepumpe OUT:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.waermepumpe_out_temp:.1f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Poolhaus:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.poolhaus_temp:.1f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Wärmepumpe:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.wp_current_temp:.0f} °C / {root.wp_target_temp:.0f} °C"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Aussen:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
        Label:
            text: f"{root.out_temp:.1f} °C / {root.out_hum:.1f} % RelH / {root.out_press:.1f} hPa"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
        Label:
            text: "TDS:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
        Label:
            text: f"{root.tds_value} ppm"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
        Label:
            text: "Druck (IN/OUT/DIFF):"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
        Label:
            text: f"{root.p_in:.1f} mBar / {root.p_out:.1f} mBar / {root.p_diff:.1f} mBar"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
        Label:
            text: "Leistung Pool:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.power:.1f} W"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        Label:
            text: "Verbrauch Pool:"
            font_size: '18sp'
            text_size: self.size
            halign: 'right'
            valign: 'middle'
        Label:
            text: f"{root.energy_today:.2f} Wh / {root.energy_yesterday:.2f} Wh"
            font_size: '18sp'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        # Weitere Messwerte nach Bedarf
